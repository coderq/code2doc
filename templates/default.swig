<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>{{ head.title|default('未知文档') }} -- Generated by code2doc</title>

    <!-- Bootstrap -->
    <!-- 新 Bootstrap 核心 CSS 文件 -->
    <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <style>
        .fr {
            float: right;
        }

        #Content h2 {
            margin-top: 0;
            padding-top: 20px;
        }

        #Content h2:first-child, #SideBar {
            padding-top: 72px;
        }

        #Content h2:target {
            padding-top: 72px;
        }

        #SideBar .list-group-item {
            border: none;
            padding: 5px 10px;
        }
    </style>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="http://cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">{{ head.title|default('未知文档') }}</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                {% macro drawTree(tree, name) %}
                <ul class="dropdown-menu" aria-labelledby="{{ name }}">
                    {% for item in tree %}
                    <li>
                        {% if item.type === 'path' %}
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false" id="{{ item.name }}"><span class="glyphicon glyphicon-book"></span> {{ item.name }} <span class="fr"><span class="glyphicon glyphicon-menu-right"></span></span></a>
                        {{ drawTree(item.children, item.name) }}
                        {% else %}
                        <a href="{{ item.file }}"><span class="glyphicon glyphicon-file"></span> {{ item.head.title }}</a>
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>
                {% endmacro %}
                <li class="dropdown" id="DocumentTree">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false" id="doc-root">接口文档 <span class="caret"></span></a>
                    {{ drawTree(tree, 'doc-root') }}
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-9" id="Content">
            {% for interface in interfaces %}
            <h2 id="{{ interface.name }}">{{ interface.name }}</h2>
            <table class="table table-striped">
                <tbody>
                <tr>
                    <td>接口地址</td>
                    <td colspan='2'>{{ interface.url }}</td>
                </tr>
                <tr>
                    <td>接口说明</td>
                    <td colspan='2'>
                        {% for description in interface.description %}
                        {{ description }}<br>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <td>请求方式</td>
                    <td colspan='2'>{{ interface.method }}</td>
                </tr>
                {% for param in interface.params %}
                <tr>
                    <td>请求参数</td>
                    <td><b>&lt;{{ param.type }}&gt;</b> {{ param.name }}</td>
                    <td>{{ param.description }}</td>
                </tr>
                {% endfor %}
                <tr>
                    <td>返回</td>
                    <td colspan='2'>
                        {{ interface.return }}
                    </td>
                </tr>
                </tbody>
            </table>
            {% endfor %}
        </div>
        <div class="col-xs-3" id="SideBar">
            <ul class="list-group" data-spy="affix" data-offset-right="20">
                {% for interface in interfaces %}
                <li class="list-group-item">
                    <a href="#{{ interface.name }}">{{ interface.name }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
<script src="http://cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
<script src="http://cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script>
    $('#DocumentTree li').bind('mouseenter', function () {
        var $this = $(this);
        var offset = $this.offset();console.log(offset, $this.width);
        $this.siblings().find('ul').hide();
        $this.find('> ul').css({
            position: 'absolute',
            left: $this.width() + 1,
            top: $this.height() * $this.index()
        }).show();
    })
</script>
</body>
</html>